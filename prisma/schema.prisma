generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Int
  stock       Int
  category    String
  imageUrl    String? //commerceflow-mobile-accessories/prisma/schema.prisma
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orderItems  OrderItem[]
}

model Customer {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  email     String?
  address   String
  createdAt DateTime @default(now())

  orders    Order[]
}

model Order {
  id          Int         @id @default(autoincrement())
  customerId  Int
  status      String
  total       Int
  trackingNo  String?
  createdAt   DateTime    @default(now())

  customer    Customer    @relation(fields: [customerId], references: [id])
  items       OrderItem[]
}

model OrderItem {
  id        Int @id @default(autoincrement())
  orderId   Int
  productId Int
  qty       Int
  price     Int

  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

